@page
@model AnimalCrossingTracker.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}
<link rel="stylesheet" href="~/css/acnh-auth.css" />

<div class="auth-container">
    <h2>🌿 ¡Bienvenido de nuevo, vecino!</h2>
    <p class="subtitle">Inicia sesión para continuar tu aventura en Animal Crossing 🏝️</p>

    <form method="post">
        <input asp-for="Input.Email" placeholder="Correo electrónico" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <input asp-for="Input.Password" type="password" placeholder="Contraseña" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <div class="form-check mb-3 text-start">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label">Recordarme</label>
        </div>

        <button type="submit">✨ Iniciar sesión</button>

        <p class="mt-3">
            ¿Nuevo en la isla?  
            <a asp-page="./Register">Regístrate aquí 🍃</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
