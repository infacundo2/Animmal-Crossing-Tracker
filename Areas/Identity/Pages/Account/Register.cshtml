@page
@model AnimalCrossingTracker.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}
<link rel="stylesheet" href="~/css/acnh-auth.css" />

<div class="auth-container">
    <h2>🐚 ¡Bienvenido a la isla!</h2>
    <p class="subtitle">Crea tu cuenta y comienza tu vida en Animal Crossing 🌴</p>

    <form method="post">
        <input asp-for="Input.Email" placeholder="Correo electrónico" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <input asp-for="Input.Password" type="password" placeholder="Contraseña" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirmar contraseña" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <button type="submit">🪶 Registrarme</button>

        <p class="mt-3">
            ¿Ya tienes cuenta?  
            <a asp-page="./Login">Inicia sesión aquí 🏠</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
